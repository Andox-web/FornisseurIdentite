{"ast":null,"code":"import Dashboard from './views/CryptoDashboard.vue';\nimport Transactions from './components/HistoricTransaction.vue';\nimport Portefeuille from './views/HomeView.vue';\nimport Market from './components/VenteCrypto.vue';\nimport UserAuth from './components/UserAuth.vue';\nexport default {\n  name: 'App',\n  data() {\n    return {\n      currentComponent: 'Dashboard',\n      isLoggedIn: false // Ajouter l'état de connexion\n    };\n  },\n  components: {\n    Dashboard,\n    Transactions,\n    Portefeuille,\n    Market,\n    UserAuth // Inclure UserAuth pour l'écran de connexion\n  },\n  methods: {\n    selectComponent(component) {\n      this.currentComponent = component;\n    },\n    handleLogin() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true; // Met à jour l'état après une connexion réussie\n    }\n  }\n};","map":{"version":3,"names":["Dashboard","Transactions","Portefeuille","Market","UserAuth","name","data","currentComponent","isLoggedIn","components","methods","selectComponent","component","handleLogin","console","log"],"sources":["C:\\Users\\Zotah\\S5\\ROJO\\exam\\FornisseurIdentite\\crypto\\affichage\\src\\App.vue"],"sourcesContent":["<template>\n  <div id=\"app\" class=\"app-container\">\n    <div class=\"sidebar\">\n      <ul>\n        <li :class=\"{ active: currentComponent === 'Dashboard' }\" @click=\"selectComponent('Dashboard')\">Dashboard</li>\n        <li :class=\"{ active: currentComponent === 'Transactions' }\" @click=\"selectComponent('Transactions')\">Transactions</li>\n        <li :class=\"{ active: currentComponent === 'Portefeuille' }\" @click=\"selectComponent('Portefeuille')\">Portefeuille</li>\n        <li :class=\"{ active: currentComponent === 'Market' }\" @click=\"selectComponent('Market')\">Market</li>\n      </ul>\n      <!-- Informations de l'utilisateur en bas de la sidebar -->\n      <div class=\"user-info\">\n        <p><strong>Nom de l'utilisateur :</strong> John Doe</p>\n        <p><strong>Email :</strong> john.doe@example.com</p>\n      </div>\n    </div>\n    <div class=\"main-content\">\n      <component :is=\"currentComponent\" :key=\"currentComponent\"></component>\n    </div>\n  </div>\n</template>\n\n<script>\nimport Dashboard from './views/CryptoDashboard.vue'\nimport Transactions from './components/HistoricTransaction.vue'\nimport Portefeuille from './views/HomeView.vue'\nimport Market from './components/VenteCrypto.vue'\nimport UserAuth from './components/UserAuth.vue'\n\nexport default {\n  name: 'App',\n  data() {\n    return {\n      currentComponent: 'Dashboard',\n      isLoggedIn: false  // Ajouter l'état de connexion\n    }\n  },\n  components: {\n    Dashboard,\n    Transactions,\n    Portefeuille,\n    Market,\n    UserAuth // Inclure UserAuth pour l'écran de connexion\n  },\n  methods: {\n    selectComponent(component) {\n      this.currentComponent = component;\n    },\n    handleLogin() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true; // Met à jour l'état après une connexion réussie\n    }\n  }\n}\n</script>\n\n\n<style scoped>\n.app-container {\n  display: flex;\n  height: 100vh;\n}\n\n.sidebar {\n  width: 250px;\n  background-color: #333;\n  color: white;\n  padding: 20px;\n  overflow-y: auto;\n  height: 100vh;\n  display: flex;\n  flex-direction: column; /* Aligne les éléments verticalement */\n  box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1); /* Ajoute une ombre pour un effet visuel */\n}\n\n.sidebar ul {\n  list-style-type: none;\n  padding: 0;\n  margin: 0;\n}\n\n.sidebar li {\n  padding: 15px;\n  cursor: pointer;\n  text-align: left;\n  transition: background-color 0.3s ease, padding-left 0.3s ease; /* Transition pour effet hover */\n}\n\n.sidebar li:hover {\n  background-color: #444;\n  padding-left: 20px; /* Ajoute une légère animation de déplacement */\n}\n\n.sidebar li.active {\n  background-color: #555; /* Met en surbrillance l'élément actif */\n}\n\n.user-info {\n  margin-top: auto; /* Pousse le bloc en bas de la sidebar */\n  padding: 20px;\n  background-color: #444;\n  border-radius: 5px;\n  font-size: 14px;\n  color: white;\n}\n\n.main-content {\n  flex-grow: 1;\n  padding: 20px;\n  overflow-y: auto;\n  height: 100vh;\n  background-color: #f4f4f4;\n  box-sizing: border-box; /* S'assure que le padding n'affecte pas la taille */\n}\n\n@media (max-width: 768px) {\n  .sidebar {\n    width: 200px; /* Réduit la largeur de la sidebar sur les petits écrans */\n  }\n\n  .main-content {\n    padding: 10px; /* Réduit le padding pour s'adapter à l'écran */\n  }\n}\n</style>\n"],"mappings":"AAsBA,OAAOA,SAAQ,MAAO,6BAA4B;AAClD,OAAOC,YAAW,MAAO,sCAAqC;AAC9D,OAAOC,YAAW,MAAO,sBAAqB;AAC9C,OAAOC,MAAK,MAAO,8BAA6B;AAChD,OAAOC,QAAO,MAAO,2BAA0B;AAE/C,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE,WAAW;MAC7BC,UAAU,EAAE,KAAI,CAAG;IACrB;EACF,CAAC;EACDC,UAAU,EAAE;IACVT,SAAS;IACTC,YAAY;IACZC,YAAY;IACZC,MAAM;IACNC,QAAO,CAAE;EACX,CAAC;EACDM,OAAO,EAAE;IACPC,eAAeA,CAACC,SAAS,EAAE;MACzB,IAAI,CAACL,gBAAe,GAAIK,SAAS;IACnC,CAAC;IACDC,WAAWA,CAAA,EAAG;MACZC,OAAO,CAACC,GAAG,CAAC,8CAA8C,CAAC;MAC3D,IAAI,CAACP,UAAS,GAAI,IAAI,EAAE;IAC1B;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}