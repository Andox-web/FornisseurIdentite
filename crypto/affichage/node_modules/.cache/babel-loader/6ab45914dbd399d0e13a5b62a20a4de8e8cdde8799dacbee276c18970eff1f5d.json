{"ast":null,"code":"import Dashboard from './views/CryptoDashboard.vue';\nimport Transactions from './components/HistoricTransaction.vue';\nimport Portefeuille from './views/HomeView.vue';\nimport Market from './components/VenteCrypto.vue';\nimport UserAuth from './components/UserAuth.vue';\nexport default {\n  name: 'App',\n  data() {\n    return {\n      isLoggedIn: true,\n      currentComponent: 'Dashboard'\n    };\n  },\n  components: {\n    Dashboard,\n    Transactions,\n    Portefeuille,\n    Market,\n    UserAuth\n  },\n  methods: {\n    selectComponent(component) {\n      this.currentComponent = component;\n    },\n    goToAccueil() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true; // L'utilisateur est maintenant connecté\n    }\n  }\n};","map":{"version":3,"names":["Dashboard","Transactions","Portefeuille","Market","UserAuth","name","data","isLoggedIn","currentComponent","components","methods","selectComponent","component","goToAccueil","console","log"],"sources":["C:\\Users\\Zotah\\S5\\ROJO\\exam\\FornisseurIdentite\\crypto\\affichage\\src\\App.vue"],"sourcesContent":["<template>\n  <div id=\"app\" class=\"app-container\">\n    <!-- Affichage du composant UserAuth si l'utilisateur n'est pas connecté -->\n    <div v-if=\"!isLoggedIn\" class=\"auth-container\">\n      <div class=\"left-panel\">\n        <img alt=\"Vue logo\" class=\"logo\" src=\"./assets/logo.png\">\n      </div>\n      <div class=\"right-panel\">\n        <UserAuth @login-success=\"goToAccueil\"></UserAuth>\n      </div>\n    </div>\n\n    <!-- Affichage du menu et du contenu principal si l'utilisateur est connecté -->\n    <div v-else class=\"authenticated-container\">\n      <div class=\"sidebar\">\n        <ul>\n          <li :class=\"{ active: currentComponent === 'Dashboard' }\" @click=\"selectComponent('Dashboard')\">Dashboard</li>\n          <li :class=\"{ active: currentComponent === 'Transactions' }\" @click=\"selectComponent('Transactions')\">Transactions</li>\n          <li :class=\"{ active: currentComponent === 'Portefeuille' }\" @click=\"selectComponent('Portefeuille')\">Portefeuille</li>\n          <li :class=\"{ active: currentComponent === 'Market' }\" @click=\"selectComponent('Market')\">Market</li>\n        </ul>\n        <div class=\"user-info\">\n          <p><strong>Nom de l'utilisateur :</strong> John Doe</p>\n          <p><strong>Email :</strong> john.doe@example.com</p>\n        </div>\n      </div>\n\n      <div class=\"main-content\">\n        <component :is=\"currentComponent\" :key=\"currentComponent\"></component>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport Dashboard from './views/CryptoDashboard.vue'\nimport Transactions from './components/HistoricTransaction.vue'\nimport Portefeuille from './views/HomeView.vue'\nimport Market from './components/VenteCrypto.vue'\nimport UserAuth from './components/UserAuth.vue'\n\nexport default {\n  name: 'App',\n  data() {\n    return {\n      isLoggedIn: true,\n      currentComponent: 'Dashboard'\n    }\n  },\n  components: {\n    Dashboard,\n    Transactions,\n    Portefeuille,\n    Market,\n    UserAuth\n  },\n  methods: {\n    selectComponent(component) {\n      this.currentComponent = component;\n    },\n    goToAccueil() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true;  // L'utilisateur est maintenant connecté\n    }\n  }\n}\n</script>\n\n<style scoped>\n/* Styles pour l'authentification */\n.auth-container {\n  display: flex;\n  height: 100%;\n  width: inherit;\n}\n\n.left-panel {\n  flex: 1;\n  background: #2c3e50;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  animation: fadeInLeft 1s ease-out;\n}\n\n.right-panel {\n  flex: 1;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  background: #34495e;\n  animation: fadeInRight 1s ease-out;\n}\n\n.logo {\n  width: 500px;\n  transition: transform 0.3s ease-in-out;\n}\n\n.logo:hover {\n  transform: scale(1.1);\n}\n\n@keyframes fadeInLeft {\n  from {\n    opacity: 0;\n    transform: translateX(-100%);\n  }\n  to {\n    opacity: 1;\n    transform: translateX(0);\n  }\n}\n\n@keyframes fadeInRight {\n  from {\n    opacity: 0;\n    transform: translateX(100%);\n  }\n  to {\n    opacity: 1;\n    transform: translateX(0);\n  }\n}\n\n/* Styles pour le menu et le contenu principal après connexion */\n.authenticated-container {\n  display: flex;\n  height: 100%;\n  width: inherit;\n}\n\n.sidebar {\n  width: 250px;\n  background-color: #333;\n  color: white;\n  padding: 20px;\n  overflow-y: auto;\n  height: 100vh;\n  display: flex;\n  flex-direction: column;\n  box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);\n}\n\n.sidebar ul {\n  list-style-type: none;\n  padding: 0;\n  margin: 0;\n}\n\n.sidebar li {\n  padding: 15px;\n  cursor: pointer;\n  text-align: left;\n  transition: background-color 0.3s ease, padding-left 0.3s ease;\n}\n\n.sidebar li:hover {\n  background-color: #444;\n  padding-left: 20px;\n}\n\n.sidebar li.active {\n  background-color: #555;\n}\n\n.user-info {\n  margin-top: auto;\n  padding: 20px;\n  background-color: #444;\n  border-radius: 5px;\n  font-size: 14px;\n  color: white;\n}\n\n.main-content {\n  flex-grow: 1;\n  padding: 20px;\n  overflow-y: auto;\n  height: 100%;\n  width: 100%;\n  background-color: #f4f4f4;\n  box-sizing: border-box;\n}\n\n@media (max-width: 768px) {\n  .sidebar {\n    width: 200px;\n  }\n\n  .main-content {\n    padding: 10px;\n  }\n}\n</style>\n"],"mappings":"AAmCA,OAAOA,SAAQ,MAAO,6BAA4B;AAClD,OAAOC,YAAW,MAAO,sCAAqC;AAC9D,OAAOC,YAAW,MAAO,sBAAqB;AAC9C,OAAOC,MAAK,MAAO,8BAA6B;AAChD,OAAOC,QAAO,MAAO,2BAA0B;AAE/C,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAU,EAAE,IAAI;MAChBC,gBAAgB,EAAE;IACpB;EACF,CAAC;EACDC,UAAU,EAAE;IACVT,SAAS;IACTC,YAAY;IACZC,YAAY;IACZC,MAAM;IACNC;EACF,CAAC;EACDM,OAAO,EAAE;IACPC,eAAeA,CAACC,SAAS,EAAE;MACzB,IAAI,CAACJ,gBAAe,GAAII,SAAS;IACnC,CAAC;IACDC,WA