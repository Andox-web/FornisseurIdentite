{"ast":null,"code":"import Dashboard from './views/CryptoDashboard.vue';\nimport Transactions from './components/HistoricTransaction.vue';\nimport Portefeuille from './views/HomeView.vue';\nimport Market from './components/VenteCrypto.vue';\nimport UserAuth from './components/UserAuth.vue';\nexport default {\n  name: 'App',\n  data() {\n    return {\n      isLoggedIn: false,\n      currentComponent: 'Dashboard'\n    };\n  },\n  components: {\n    Dashboard,\n    Transactions,\n    Portefeuille,\n    Market,\n    UserAuth\n  },\n  methods: {\n    selectComponent(component) {\n      this.currentComponent = component;\n    },\n    goToAccueil() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true; // L'utilisateur est maintenant connecté\n    }\n  }\n};","map":{"version":3,"names":["Dashboard","Transactions","Portefeuille","Market","UserAuth","name","data","isLoggedIn","currentComponent","components","methods","selectComponent","component","goToAccueil","console","log"],"sources":["D:\\dev\\FornisseurIdentite\\crypto\\affichage\\src\\App.vue"],"sourcesContent":["<template>\r\n  <div id=\"app\" class=\"app-container\">\r\n    <!-- Affichage du composant UserAuth si l'utilisateur n'est pas connecté -->\r\n    <div v-if=\"!isLoggedIn\" class=\"auth-container\">\r\n      <div class=\"left-panel\">\r\n        <img alt=\"Vue logo\" class=\"logo\" src=\"./assets/logo.png\">\r\n      </div>\r\n      <div class=\"right-panel\">\r\n        <UserAuth @login-success=\"goToAccueil\"></UserAuth>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Affichage du menu et du contenu principal si l'utilisateur est connecté -->\r\n    <div v-else class=\"authenticated-container\">\r\n      <div class=\"sidebar\">\r\n        <ul>\r\n          <li :class=\"{ active: currentComponent === 'Dashboard' }\" @click=\"selectComponent('Dashboard')\">Dashboard</li>\r\n          <li :class=\"{ active: currentComponent === 'Transactions' }\" @click=\"selectComponent('Transactions')\">Transactions</li>\r\n          <li :class=\"{ active: currentComponent === 'Portefeuille' }\" @click=\"selectComponent('Portefeuille')\">Portefeuille</li>\r\n          <li :class=\"{ active: currentComponent === 'Market' }\" @click=\"selectComponent('Market')\">Market</li>\r\n        </ul>\r\n        <div class=\"user-info\">\r\n          <p><strong>Nom de l'utilisateur :</strong> John Doe</p>\r\n          <p><strong>Email :</strong> john.doe@example.com</p>\r\n        </div>\r\n      </div>\r\n\r\n      <div class=\"main-content\">\r\n        <component :is=\"currentComponent\" :key=\"currentComponent\"></component>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Dashboard from './views/CryptoDashboard.vue'\r\nimport Transactions from './components/HistoricTransaction.vue'\r\nimport Portefeuille from './views/HomeView.vue'\r\nimport Market from './components/VenteCrypto.vue'\r\nimport UserAuth from './components/UserAuth.vue'\r\n\r\nexport default {\r\n  name: 'App',\r\n  data() {\r\n    return {\r\n      isLoggedIn: false,\r\n      currentComponent: 'Dashboard'\r\n    }\r\n  },\r\n  components: {\r\n    Dashboard,\r\n    Transactions,\r\n    Portefeuille,\r\n    Market,\r\n    UserAuth\r\n  },\r\n  methods: {\r\n    selectComponent(component) {\r\n      this.currentComponent = component;\r\n    },\r\n    goToAccueil() {\r\n      console.log(\"L'événement a été capté, je vais rediriger !\");\r\n      this.isLoggedIn = true;  // L'utilisateur est maintenant connecté\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n/* Styles pour l'authentification */\r\n.auth-container {\r\n  display: flex;\r\n  height: 100%;\r\n  width: inherit;\r\n}\r\n\r\n.left-panel {\r\n  flex: 1;\r\n  background: #2c3e50;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  animation: fadeInLeft 1s ease-out;\r\n}\r\n\r\n.right-panel {\r\n  flex: 1;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  background: #34495e;\r\n  animation: fadeInRight 1s ease-out;\r\n}\r\n\r\n.logo {\r\n  width: 500px;\r\n  transition: transform 0.3s ease-in-out;\r\n}\r\n\r\n.logo:hover {\r\n  transform: scale(1.1);\r\n}\r\n\r\n@keyframes fadeInLeft {\r\n  from {\r\n    opacity: 0;\r\n    transform: translateX(-100%);\r\n  }\r\n  to {\r\n    opacity: 1;\r\n    transform: translateX(0);\r\n  }\r\n}\r\n\r\n@keyframes fadeInRight {\r\n  from {\r\n    opacity: 0;\r\n    transform: translateX(100%);\r\n  }\r\n  to {\r\n    opacity: 1;\r\n    transform: translateX(0);\r\n  }\r\n}\r\n\r\n/* Styles pour le menu et le contenu principal après connexion */\r\n.authenticated-container {\r\n  display: flex;\r\n  height: 100%;\r\n  width: inherit;\r\n}\r\n\r\n.sidebar {\r\n  width: 250px;\r\n  background-color: #333;\r\n  color: white;\r\n  padding: 20px;\r\n  overflow-y: auto;\r\n  height: 100vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.sidebar ul {\r\n  list-style-type: none;\r\n  padding: 0;\r\n  margin: 0;\r\n}\r\n\r\n.sidebar li {\r\n  padding: 15px;\r\n  cursor: pointer;\r\n  text-align: left;\r\n  transition: background-color 0.3s ease, padding-left 0.3s ease;\r\n}\r\n\r\n.sidebar li:hover {\r\n  background-color: #444;\r\n  padding-left: 20px;\r\n}\r\n\r\n.sidebar li.active {\r\n  background-color: #555;\r\n}\r\n\r\n.user-info {\r\n  margin-top: auto;\r\n  padding: 20px;\r\n  background-color: #444;\r\n  border-radius: 5px;\r\n  font-size: 14px;\r\n  color: white;\r\n}\r\n\r\n.main-content {\r\n  flex-grow: 1;\r\n  overflow-y: auto;\r\n  height: 100vh;\r\n  background-color: #f4f4f4;\r\n  box-sizing: border-box;\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .sidebar {\r\n    width: 200px;\r\n  }\r\n\r\n  .main-content {\r\n    padding: 10px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AAmCA,OAAOA,SAAQ,MAAO,6BAA4B;AAClD,OAAOC,YAAW,MAAO,sCAAqC;AAC9D,OAAOC,YAAW,MAAO,sBAAqB;AAC9C,OAAOC,MAAK,MAAO