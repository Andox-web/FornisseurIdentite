{"ast":null,"code":"import Homeview from './views/HomeView.vue';\nimport UserAuth from './components/UserAuth.vue';\nimport cryptodashboard from './views/CryptoDashboard.vue';\nexport default {\n  name: 'App',\n  components: {\n    UserAuth,\n    Homeview,\n    cryptodashboard\n  },\n  data() {\n    return {\n      isLoggedIn: false\n    };\n  },\n  methods: {\n    goToAccueil() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true;\n    }\n  }\n};","map":{"version":3,"names":["Homeview","UserAuth","cryptodashboard","name","components","data","isLoggedIn","methods","goToAccueil","console","log"],"sources":["C:\\Users\\Zotah\\S5\\ROJO\\exam\\FornisseurIdentite\\crypto\\affichage\\src\\App.vue"],"sourcesContent":["<template>\n  <div v-if=\"!isLoggedIn\" id=\"app\">\n    <div class=\"left-panel\">\n      <img alt=\"Vue logo\" class=\"logo\" src=\"./assets/logo.png\">\n    </div>\n    <div class=\"right-panel\">\n      <UserAuth @login-success=\"goToAccueil\"></UserAuth>\n    </div>\n  </div>\n\n  <div v-else id=\"Home\">\n    <Homeview></Homeview>\n  </div>\n</template>\n\n<script>\nimport Homeview from './views/HomeView.vue';\nimport UserAuth from './components/UserAuth.vue';\nimport cryptodashboard from './views/CryptoDashboard.vue';\n\nexport default {\n  name: 'App',\n  components: {\n    UserAuth,\n    Homeview,\n    cryptodashboard\n  },\n  data() {\n    return {\n      isLoggedIn: false\n    };\n  },\n  methods: {\n    goToAccueil() {\n      console.log(\"L'événement a été capté, je vais rediriger !\");\n      this.isLoggedIn = true;\n    }\n  }\n}\n</script>\n\n<style scoped>\n/* Assurez-vous que le body et html prennent toute la hauteur de la fenêtre */\nhtml, body {\n  height: 100%;\n  margin: 0;\n  padding: 0;\n  box-sizing: border-box;\n}\n\n/* L'application doit occuper toute la fenêtre */\n#app {\n  display: flex;\n  height: 100vh;\n  width: 100vw;\n  margin: 0; /* Assurez-vous qu'il n'y a pas de marge par défaut */\n  padding: 0; /* Assurez-vous qu'il n'y a pas de padding par défaut */\n  overflow: hidden; /* Empêche tout débordement */\n}\n\n#Home {\n  display: flex;\n  justify-content: center; /* Centre horizontalement */\n  align-items: center; /* Centre verticalement */\n  height: 100vh; /* Prend toute la hauteur de la fenêtre */\n  width: 100vw; /* Prend toute la largeur de la fenêtre */\n}\n\n.left-panel {\n  flex: 1;\n  background: #2c3e50;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  animation: fadeInLeft 1s ease-out;\n}\n\n.right-panel {\n  flex: 1;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  background: #34495e;\n  animation: fadeInRight 1s ease-out;\n}\n\n.logo {\n  width: 500px;\n  transition: transform 0.3s ease-in-out;\n}\n\n.logo:hover {\n  transform: scale(1.1);\n}\n\n@keyframes fadeInLeft {\n  from {\n    opacity: 0;\n    transform: translateX(-100%);\n  }\n  to {\n    opacity: 1;\n    transform: translateX(0);\n  }\n}\n\n@keyframes fadeInRight {\n  from {\n    opacity: 0;\n    transform: translateX(100%);\n  }\n  to {\n    opacity: 1;\n    transform: translateX(0);\n  }\n}\n</style>\n"],"mappings":"AAgBA,OAAOA,QAAO,MAAO,sBAAsB;AAC3C,OAAOC,QAAO,MAAO,2BAA2B;AAChD,OAAOC,eAAc,MAAO,6BAA6B;AAEzD,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,UAAU,EAAE;IACVH,QAAQ;IACRD,QAAQ;IACRE;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAU,EAAE;IACd,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,WAAWA,CAAA,EAAG;MACZC,OAAO,CAACC,GAAG,CAAC,8CAA8C,CAAC;MAC3D,IAAI,CAACJ,UAAS,GAAI,IAAI;IACxB;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}