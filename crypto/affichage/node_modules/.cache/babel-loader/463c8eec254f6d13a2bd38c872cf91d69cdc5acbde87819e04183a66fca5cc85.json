{"ast":null,"code":"export default {\n  data() {\n    return {\n      // Exemple de données de transactions\n      transactions: [{\n        type: 'achat',\n        date: '2024-01-01',\n        amount: 0.5,\n        price: 20000\n      }, {\n        type: 'vente',\n        date: '2024-01-02',\n        amount: 0.3,\n        price: 21000\n      }, {\n        type: 'achat',\n        date: '2024-01-03',\n        amount: 1.2,\n        price: 19000\n      }]\n    };\n  },\n  methods: {\n    formatDate(date) {\n      const options = {\n        year: 'numeric',\n        month: 'short',\n        day: 'numeric'\n      };\n      return new Date(date).toLocaleDateString('fr-FR', options);\n    }\n  }\n};","map":{"version":3,"names":["data","transactions","type","date","amount","price","methods","formatDate","options","year","month","day","Date","toLocaleDateString"],"sources":["C:\\Users\\Zotah\\S5\\ROJO\\exam\\FornisseurIdentite\\crypto\\affichage\\src\\components\\HistoricTransaction.vue"],"sourcesContent":["<template>\r\n  <div class=\"transaction-dashboard\">\r\n    <!-- Entête -->\r\n    <h1>Historique des Transactions</h1>\r\n\r\n    <!-- Liste des transactions -->\r\n    <div v-if=\"transactions.length\" class=\"transaction-list\">\r\n      <div class=\"transaction-item\" v-for=\"(transaction, index) in transactions\" :key=\"index\">\r\n        <div class=\"transaction-details\">\r\n          <span class=\"transaction-type\" :class=\"{'buy': transaction.type === 'achat', 'sell': transaction.type === 'vente'}\">\r\n            {{ transaction.type === 'achat' ? 'Achat' : 'Vente' }}\r\n          </span>\r\n          <span class=\"transaction-date\">{{ formatDate(transaction.date) }}</span>\r\n        </div>\r\n        <div class=\"transaction-amount\">\r\n          <span>{{ transaction.amount }} BTC</span>\r\n          <span class=\"transaction-price\">{{ transaction.price }} €</span>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <!-- Message si aucune transaction -->\r\n    <p v-else class=\"no-transactions\">Aucune transaction enregistrée.</p>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      // Exemple de données de transactions\r\n      transactions: [\r\n        { type: 'achat', date: '2024-01-01', amount: 0.5, price: 20000 },\r\n        { type: 'vente', date: '2024-01-02', amount: 0.3, price: 21000 },\r\n        { type: 'achat', date: '2024-01-03', amount: 1.2, price: 19000 },\r\n      ],\r\n    };\r\n  },\r\n  methods: {\r\n    formatDate(date) {\r\n      const options = { year: 'numeric', month: 'short', day: 'numeric' };\r\n      return new Date(date).toLocaleDateString('fr-FR', options);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.transaction-dashboard {\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  padding: 2rem;\r\n  background: #181818;\r\n  border-radius: 12px;\r\n  width: 100%;\r\n  height: 100%;\r\n  color: white;\r\n  box-sizing: border-box;\r\n  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);\r\n}\r\n\r\nh1 {\r\n  font-size: 2.4rem;\r\n  font-weight: 600;\r\n  margin-bottom: 25px;\r\n  color: #f39c12;\r\n}\r\n\r\n.transaction-list {\r\n  width: 100%;\r\n  max-width: 850px;\r\n  margin-top: 20px;\r\n  padding: 1.5rem;\r\n  background: #242424;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.transaction-item {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  padding: 20px;\r\n  border-bottom: 1px solid #444;\r\n  transition: transform 0.3s ease, background-color 0.3s ease;\r\n}\r\n\r\n.transaction-item:last-child {\r\n  border-bottom: none;\r\n}\r\n\r\n.transaction-item:hover {\r\n  transform: scale(1.02);\r\n  background-color: #333;\r\n}\r\n\r\n.transaction-details {\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n}\r\n\r\n.transaction-type {\r\n  font-weight: 700;\r\n  font-size: 1.2rem;\r\n  color: #f39c12;\r\n}\r\n\r\n.transaction-type.buy {\r\n  color: #2ecc71; /* Vert pour les achats */\r\n}\r\n\r\n.transaction-type.sell {\r\n  color: #e74c3c; /* Rouge pour les ventes */\r\n}\r\n\r\n.transaction-date {\r\n  font-size: 1rem;\r\n  color: #aaa;\r\n}\r\n\r\n.transaction-amount {\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n  text-align: right;\r\n}\r\n\r\n.transaction-amount span {\r\n  display: block;\r\n  font-size: 1.2rem;\r\n}\r\n\r\n.transaction-price {\r\n  font-size: 1.3rem;\r\n  font-weight: bold;\r\n  color: #3498db;\r\n}\r\n\r\n.no-transactions {\r\n  text-align: center;\r\n  color: #aaa;\r\n  font-size: 1.2rem;\r\n  margin-top: 25px;\r\n}\r\n\r\n.transaction-list::-webkit-scrollbar {\r\n  width: 8px;\r\n}\r\n\r\n.transaction-list::-webkit-scrollbar-thumb {\r\n  background-color: #555;\r\n  border-radius: 8px;\r\n}\r\n\r\n.transaction-list::-webkit-scrollbar-thumb:hover {\r\n  background-color: #777;\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .transaction-dashboard {\r\n    padding: 1.5rem;\r\n  }\r\n\r\n  h1 {\r\n    font-size: 1.8rem;\r\n  }\r\n\r\n  .transaction-list {\r\n    padding: 1rem;\r\n  }\r\n\r\n  .transaction-item {\r\n    padding: 15px;\r\n  }\r\n\r\n  .transaction-amount span {\r\n    font-size: 1.1rem;\r\n  }\r\n\r\n  .transaction-price {\r\n    font-size: 1.1rem;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AA0BA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACL;MACAC,YAAY,EAAE,CACZ;QAAEC,IAAI,EAAE,OAAO;QAAEC,IAAI,EAAE,YAAY;QAAEC,MAAM,EAAE,GAAG;QAAEC,KAAK,EAAE;MAAM,CAAC,EAChE;QAAEH,IAAI,EAAE,OAAO;QAAEC,IAAI,EAAE,YAAY;QAAEC,MAAM,EAAE,GAAG;QAAEC,KAAK,EAAE;MAAM,CAAC,EAChE;QAAEH,IAAI,EAAE,OAAO;QAAEC,IAAI,EAAE,YAAY;QAAEC,MAAM,EAAE,GAAG;QAAEC,KAAK,EAAE;MAAM,CAAC;IAEpE,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAACJ,IAAI,EAAE;MACf,MAAMK,OAAM,GAAI;QAAEC,IAAI,EAAE,SAAS;QAAEC,KAAK,EAAE,OAAO;QAAEC,GAAG,EAAE;MAAU,CAAC;MACnE,OAAO,IAAIC,IAAI,CAACT,IAAI,CAAC,CAACU,kBAAkB,CAAC,OAAO,EAAEL,OAAO,CAAC;IAC5D;EACF;AACF,CAAC","ignoreList":[]},"metadata